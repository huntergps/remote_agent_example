<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='remote_agent_example_room_action' model='ir.actions.act_window'>
        <field name='name'>Room</field>
        <field name='res_model'>remote_agent_example.room</field>
         <field name="view_mode">tree</field>
    </record>

    <menuitem id="remote_agent_example_top_menu" name='Agent Example'/>
        
    <menuitem id="remote_agent_example_room_menu" parent='remote_agent_example_top_menu'
        name='Rooms' action='remote_agent_example_room_action'/>

    <record id='remote_agent_example_root_list' model='ir.ui.view'>
        <field name='name'>remote_agent_example.room.list</field>
        <field name='model'>remote_agent_example.room</field>
        <field name='type'>tree</field>
        <field name='arch' type='xml'>
            <tree editable="bottom">
                <button type="object" name="refresh" icon="fa-refresh"/>
                <field name="name"/>
                <field name="agent_uid"/>
                <field name="temperature"/>
                <field name="noise"/>
                <field name="status"/>
                <field name="last_update"/>
            </tree>
        </field>
    </record>
</odoo>
